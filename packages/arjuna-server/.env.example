# ArjunaCRM Server Environment Configuration
# Copy this file to .env and update with your actual values

NODE_ENV=development
NODE_PORT=3000
SERVER_URL=http://localhost:3000
PUBLIC_DOMAIN_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3003
APP_SECRET=replace_me_with_a_random_string

PG_DATABASE_URL=postgres://postgres:postgres@localhost:5432/default
REDIS_URL=redis://localhost:6379

STORAGE_TYPE=local
EMAIL_DRIVER=smtp
EMAIL_FROM_ADDRESS=contact@yourdomain.com
EMAIL_FROM_NAME="ArjunaCRM"
EMAIL_SYSTEM_ADDRESS=system@yourdomain.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

AUTH_PASSWORD_ENABLED=true
IS_EMAIL_VERIFICATION_REQUIRED=false
AUTH_GOOGLE_ENABLED=false
AUTH_MICROSOFT_ENABLED=false

LOG_LEVEL=log
LOG_DRIVER=console
RATE_LIMITING_ENABLED=true
DISABLE_DB_MIGRATIONS=false
DISABLE_CRON_JOBS_REGISTRATION=false

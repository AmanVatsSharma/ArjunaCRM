{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "target": "es2018",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "paths": {
      "src/engine/arjuna-orm/*": ["./src/engine/twenty-orm/*"],
      "src/engine/core-modules/arjuna-config/*": [
        "./src/engine/core-modules/twenty-config/*"
      ],
      "src/engine/workspace-manager/arjuna-standard-application/*": [
        "./src/engine/workspace-manager/twenty-standard-application/*"
      ],
      "test/integration/arjuna-config/*": [
        "./test/integration/twenty-config/*"
      ],
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "dist"]
}
